<?xml version="1.0" encoding="UTF-8"?>
<install type="component" version="1.5.0" method="upgrade">
    <name>verplan</name>
    <version>0.2.1</version>
    <description>Komponente zum Einstellen des Vertretungsplanes auf die Website des MCG (http://www.marie-curie-gymnasium-dallgow.de/).</description>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <author>Dominik Moritz</author>
    <authoremail>dominikmoritz@gmail.com</authoremail>
    <authorurl>http://www.dmoritz.bplaced.net</authorurl>
    <copyright>Copyright (C) 2009 Dominik Moritz. All rights reserved.</copyright>
    <creationDate>06-Sep-2009</creationDate>
    
    <files folder="site">
    	<folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
        <folder>includes</folder>
        <filename>controller.php</filename>
        <filename>verplan.php</filename>
    </files>
    
    <administration>
    	<menu img="components/com_verplan/includes/images/icon_database.png">Verplan</menu>
        
        <files folder="admin">
            <folder>includes</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>controllers</folder>
            <folder>uploads</folder>
            <filename>admin.verplan.php</filename>
            <filename>config.xml</filename>
            <filename>install.php</filename>
            <filename>install.sql</filename>
            <filename>uninstall.sql</filename>
            <filename>controller.php</filename>
        </files>
    </administration>
    
    <install>
    	<sql>
    		<file charset="utf8" driver="mysql">install.sql</file>
    	</sql>
    </install>
    <uninstall>
    	<sql>
    		<file charset="utf8" driver="mysql">uninstall.sql</file>
    	</sql>
    </uninstall>
    
    <installfile>install.php</installfile> 
    <uninstallfile>install.php</uninstallfile> 
</install>
